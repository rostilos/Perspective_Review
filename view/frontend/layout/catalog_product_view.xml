<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="Perspective\Review\Block\Product\Review"
                   name="perspective_reviews.tab"
                   as="perspective_reviews"
                   template="Perspective_Review::reviews.phtml"
                   group="detailed_info"
                   ifconfig="catalog/review/active"
            >
                <arguments>
                    <argument name="sort_order" xsi:type="string">30</argument>
                    <argument translate="true" name="title" xsi:type="string">Perspective Reviews</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
